<h1><%= @cocktail.name %> details</h1>

<h2>Description</h2>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.ingredient.name %></p>
<p><%= dose.description %></p>
<p><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>delete</p>
<% end %>
<% end %>

<%= render 'doses/new', cocktail: @cocktail, dose: @dose %>

<%= link_to 'Back to list', cocktails_path, class: 'btn btn-primary' %>
