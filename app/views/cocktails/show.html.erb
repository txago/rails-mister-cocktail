<div class="container">
  <div class="row min-vh-100 justify-content-center align-items-center">
    <div class="col-lg-8">
      <h1 class="mb-4"><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
      <!-- Cocktail info -->
      <p><%= dose.ingredient.name %></p>
      <p><%= dose.description %></p>
      <p><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>delete</p>
      <% end %>
      <% end %>
      <!-- Dose info -->
      <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
      <%= link_to 'Back to list', cocktails_path, class: 'mt-4 btn btn-primary btn-info' %>
    </div>
  </div>
</div>

