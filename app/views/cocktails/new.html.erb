<div class="container">
  <div class="row min-vh-100 justify-content-center align-items-center">
    <div class="col-lg-8">
      <h1 class="mb-4">Create new cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, label: 'Name' %>
        <%= f.submit :submit, label: 'Add a cocktail', class: 'mb-4 btn btn-primary btn-lg' %>
      <% end %>
      <%= link_to 'Back to list', cocktails_path, class: 'mt-4 btn btn-primary btn-info' %>
    </div>
  </div>
</div>

